    },
    {
      "command": "cmd.exe",
      "description": "Windows 명령 프롬프트",
      "allowedFlags": [
        "/c"
      ]
    },
    {
      "command": "cd",
      "description": "디렉토리 변경",
      "allowedPaths": [
        ".",
