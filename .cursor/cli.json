        "commit",
        "push",
        "pull",
        "init",
        "branch",
        "remote",
        "diff",
        "log",
        "show",
        "rev-parse",
        "diff-tree",
        "diff --cached",
        "diff --name-only",
        "diff --quiet"
      ],
      "allowedFlags": [
        "-m",
        "-F",
        "-A",
        "--short",
        "--name-status",
        "--stat",
        "-u",
        "origin",
        "main",
        "--cached",
        "--name-only",
        "--diff-filter",
        "--no-commit-id",
        "-r",
        "--numstat",
        "--pretty",
        "-1",
        "HEAD"
      ]
    },
    {
      "command": "npm",
