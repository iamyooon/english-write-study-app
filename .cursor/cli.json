      ],
      "allowedScripts": [
        "type-check",
        "lint",
        "test",
        "test:e2e",
        "test:watch",
        "test:coverage",
        "test:all",
        "precommit",
        "pre-commit",
        "update-docs",
        "commit",
        "post-commit",
        "dev",
        "build",
        "start"
      ]
    },
    {
